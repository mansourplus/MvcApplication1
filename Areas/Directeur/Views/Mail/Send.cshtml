@model SoftSchool.Models.outbox

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout_directeur.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<b>
    <a href="/Directeur/Mail/Send" class="btn btn-warning cancel">جديد</a>
    <a href="/Directeur/Mail" class="btn btn-warning cancel">الواردات</a>
    <a href="/Directeur/Mail/outbox" class="btn btn-warning cancel">الصادرات</a>
</b>
<br /><br /><br />
@using (Html.BeginForm("Send","Mail", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.ValidationSummary(true)
    <table >
        <tr>
            <td>
               الموضوع:
            </td>
            <td>
                @Html.EditorFor(model => model.subject)
                @Html.ValidationMessageFor(model => model.subject)
            </td>
        </tr>
        <tr>
            <td>
               الوثائق المرفقة:
            </td>
            <td>
               <input type="file"  id="file" name="file"/>
                @Html.ValidationMessageFor(model => model.file)
            </td>
        </tr>
         <tr>
            <td>
                المحتوى:
            </td>
            <td>
                <textarea cols="20" id="objet" name="objet" rows="15">@if(Model!=null){@Model.objet}</textarea>

                @Html.ValidationMessageFor(model => model.objet)
            </td>
        </tr>
        <tr>
        <td>
    
        </td>
        <td>
            <p>
                <input type="submit" class="btn btn-success fileinput-button" value="إرسال" />
                <input type="reset" class="btn btn-warning cancel" value="إلغاء" />
            </p>
        </td>
        </tr>
    </table>
}

