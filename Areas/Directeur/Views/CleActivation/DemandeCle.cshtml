@model Tuple<SoftSchool.Models.activation, List<SoftSchool.Models.logiciels>> 

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_directeur.cshtml";

}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/Bootstrap/bootstrap.min.css")" rel="stylesheet" type="text/css" media="screen" />
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" media="screen" />
<br />
<br />
<br />
<br /><br />
<br />
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <table dir="rtl">
    <tr>
    <td width="150">
       <h5><b> المنظومة</b></h5>
    </td>
    <td>
    <select id="LogicelId" name="LogicelId">
        <option value="-1">إختر المنظومة...</option>
        @{
            foreach (SoftSchool.Models.logiciels lg in Model.Item2)
            {
                <option value="@lg.LogicielID">@lg.Nom</option>
            }
         }
         </select>
        @Html.ValidationMessageFor(model => model.Item1.LogicelId)
    </td>
    </tr>
    <tr>
    <td>
        <h5><b> الرمز الخاص بالمؤسسة</b></h5>
    </td>
    <td>
    <input class="input-validation-error text-box single-line" id="Cle_Demander" name="Cle_Demander" type="text" value="@Model.Item1.Cle_Demander" />
         @Html.ValidationMessageFor(model => model.Item1.Cle_Demander)
    </td>
    </tr>
    <tr>
    <td align="center">
    <button type="submit" class="btn btn-primary start">
                    <i class="icon-upload icon-white"></i>
                    <span>تسجيل</span>
                </button>
       <!-- <input type="submit" value="Create" />-->
    </td>
    <td>
    
    </td>
    </tr>
    </table>
}

